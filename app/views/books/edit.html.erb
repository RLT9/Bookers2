<% if @book.errors.any? %>
 <%= @book.errors.count %>件のerror
 <% @book.errors.full_messages.each do |message| %>
   <%= message %>
 <% end %>
<% end %>
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <label for="inputBook">Title</label>
      <br>
      <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"名前"%>
      <br>
      <label for="body">Body</label>
      <br>
      <%= f.text_area :body, autforcus: true, id:"body"%>
      <br>
      <%= f.submit "Update Book" %>
      <% end %>
      <%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>
    </div>
  </div>
</div>
