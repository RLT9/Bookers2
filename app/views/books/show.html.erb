<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container"><p id="notice"></p>
  <div class="row">
    <div class="col-md-3">
      <%= render "users/sidebar", user: @user, book: @book_new%>
    </div>
    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
      <table class="table">
        <tbody>
        <tr>
          <th scope="row"></th>
          <td>
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "40x40") %>
            <% end %>
            <br>
            <%= link_to @user.name, user_path(@user) %>
          </td>
          <td>
            <%= @book.title %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td>
            <% if @user.id == current_user.id %>
            <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-success" %>
            <%= link_to 'Destroy', book_path(@book), class: "btn btn-danger", method: :delete, data: { confirm: '本当に消しますか?' } %>
            <% end %>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>