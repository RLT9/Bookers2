<% if book.errors.any? %>
<%= book.errors.count %>件のerror
 <% book.errors.full_messages.each do |message| %>
   <%= message %>
 <% end %>
<% end %>
<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th><%= "Name" %></th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th><%= "Introduction" %></th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<%= link_to "", edit_user_path(user), class: "btn btn-outline-secondary fas fa-user-cog col-md-12" %>
  <div>
  <br>
  <%= form_with model: book, local:true do |f| %>
  <h2>New book</h2>
  <h6>Title</h6>
  <%= f.text_field :title %>
  <h6>Opinion</h6>
  <%= f.text_area :body %>
  <br>
  <br>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>
</div>
